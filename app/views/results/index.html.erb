    <td><%= result.outside_diameter %></td>
    <td><%= result.wall_tickness %></td>
    <td><%= result.construction %></td>
    <td><%= result.roundness %></td>
    <td><%= Certificate.find(result.certificate_id).id %></td>
    <td><%= link_to 'Show', result %></td>
    <td><%= link_to 'Edit', edit_result_path(result) %></td>
