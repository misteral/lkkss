<h3>Вход в систему</h3>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="inputs">
    <%= f.input :email, :required => false, :autofocus => true, :label => 'логин' %>
    <%= f.input :password, :required => false, :label => 'пароль' %>
    <% f.input :remember_me, :label => 'запомнить', :as => :boolean if devise_mapping.rememberable? %>
  </div>
           <br>
  <div class="actions">
    <%= f.button :submit, "вход" %>
  </div>
<% end %>

