<%= simple_form_for(@cost_input) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :hour, :label => 'один час работы' %>
    <%= f.input :material, :label => 'один кв. мм.' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'сохранить изменения' %>
  </div>
<% end %>
