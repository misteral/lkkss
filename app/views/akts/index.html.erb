<% @akts.each do |akt| %>
  <tr>
    <td><%= akt.data_akt %></td>
    <td><%= akt.num_trub_oip %></td>
    <td><%= akt.num_trub %></td>
    <td><%= akt.konstr_id %></td>
    <td><%= akt.zavod_id %></td>
    <td><%= akt.tipdef_id %></td>
    <td><%= akt.ntrub_id %></td>
    <td><%= link_to 'Show', akt %></td>
    <td><%= link_to 'Edit', edit_akt_path(akt) %></td>
    <td><%= link_to 'Destroy', akt, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

